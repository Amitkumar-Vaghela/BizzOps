# Add this to your .env file for proper configuration

# Environment
NODE_ENV=development

# Server Configuration
PORT=8000

# Database
MONGODB_URI=your_mongodb_connection_string

# JWT Configuration
ACCESS_TOKEN_SECRET=your-super-secure-access-token-secret-here-min-32-chars
ACCESS_TOKEN_EXPIRY=15m
REFRESH_TOKEN_SECRET=your-super-secure-refresh-token-secret-here-min-32-chars-different-from-access
REFRESH_TOKEN_EXPIRY=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# Security Settings
BCRYPT_SALT_ROUNDS=12

# Rate Limiting (optional overrides)
GENERAL_RATE_LIMIT=100
AUTH_RATE_LIMIT=5
SESSION_RATE_LIMIT=10

# Proxy Settings (for production)
# TRUST_PROXY=1
# TRUSTED_PROXIES=127.0.0.1,::1

# Session Management
MAX_SESSIONS_PER_USER=5
SESSION_CLEANUP_INTERVAL=86400000
